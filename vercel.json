{
  "version": 2,
  "installCommand": "npm ci && cd shipment-front && npm ci",
  "buildCommand": "cd shipment-front && npm run build",
  "outputDirectory": "shipment-front/dist/shipment-app",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/",
      "destination": "/index.html"
    },
    {
      "source": "/home",
      "destination": "/index.html"
    },
    {
      "source": "/home/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/super-admin",
      "destination": "/index.html"
    }
  ]
}
